<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/color_white"
                  android:padding="@dimen/activity_horizontal_margin">

    <FrameLayout    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true">


                <LinearLayout    android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_gravity="center">


                                    <RelativeLayout     android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content">

                                            <TextView 	    android:id="@+id/txtTitle"
                                                            android:layout_alignParentLeft="true"
                                                            android:layout_width="@dimen/title_text_field_width"
                                                            android:layout_height="wrap_content"
                                                            style="?android:textAppearanceLarge"
                                                            android:textSize="@dimen/title_text_size"
                                                            android:textStyle="bold"
                                                            android:padding="@dimen/text_field_padding" />


                                            <TextView 	    android:id="@+id/txtMessage"
                                                            android:layout_marginTop="20dp"
                                                            android:layout_alignParentLeft="true"
                                                            android:layout_below="@+id/txtTitle"
                                                            android:layout_width="@dimen/title_text_field_width"
                                                            android:layout_height="wrap_content"
                                                            android:textSize="@dimen/message_text_size"
                                                            android:padding="@dimen/text_field_padding" />


                                            <LinearLayout       android:layout_below="@+id/txtMessage"
                                                                android:layout_alignRight="@+id/txtMessage"
                                                                android:layout_marginTop="40dp"
                                                                android:layout_width="wrap_content"
                                                                android:layout_height="wrap_content"
                                                                android:orientation="horizontal">

                                                                <Button     android:id="@+id/btnNo"
                                                                            android:layout_width="@dimen/buttons_width"
                                                                            android:layout_height="wrap_content"
                                                                            android:textSize="@dimen/buttons_text_size"
                                                                            android:background="@null"/>

                                                                <Button     android:id="@+id/btnYes"
                                                                            android:layout_width="@dimen/buttons_width"
                                                                            android:layout_height="wrap_content"
                                                                            android:textSize="@dimen/buttons_text_size"
                                                                            android:background="@null"/>

                                            </LinearLayout>

                            </RelativeLayout>
                </LinearLayout>
    </FrameLayout>

</RelativeLayout>